{
  "extends": ["github>freecodecamp/renovate-config"],
  "packageRules": [
    {
      "matchDatasources": ["node-version"],
      "minimumReleaseAge": "7 days"
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    }
  ]
}
