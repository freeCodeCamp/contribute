{
  "extends": ["github>freecodecamp/renovate-config"],
  "packageRules": [
    {
      "matchDatasources": ["node-version"],
      "minimumReleaseAge": "7 days"
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": [
        "@astrojs/check",
        "@astrojs/starlight",
        "@astrojs/starlight-tailwind",
        "@tailwindcss/vite",
        "astro",
        "starlight-links-validator",
        "starlight-scroll-to-top",
        "tailwindcss",
        "typescript",
        "@eslint/eslintrc",
        "@eslint/js",
        "@types/jsdom",
        "@types/node",
        "eslint",
        "eslint-config-prettier",
        "eslint-plugin-astro",
        "eslint-plugin-prettier",
        "globals",
        "husky",
        "is-ci",
        "jsdom",
        "lint-staged",
        "prettier",
        "prettier-plugin-astro",
        "sharp",
        "typescript-eslint",
        "vitest",
        "wrangler"
      ],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    }
  ]
}
