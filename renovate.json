{
  "extends": ["github>freecodecamp/renovate-config"],
  "packageRules": [
    {
      "matchDatasources": ["node-version"],
      "minimumReleaseAge": "7 days"
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": [
        "@astrojs/check",
        "@astrojs/starlight",
        "starlight-links-validator",
        "starlight-scroll-to-top",
        "sharp"
      ],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    }
  ]
}
