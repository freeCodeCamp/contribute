{
  "name": "@freecodecamp/contribute",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prepare": "is-ci || husky",
    "develop": "astro dev",
    "build": "astro build",
    "preview": "pnpm build && wrangler dev",
    "format": "prettier . --write && eslint . --fix",
    "lint": "prettier . --check && eslint .",
    "test": "vitest run",
    "clean": "pnpm dlx rimraf .astro dist",
    "check:astro": "astro check",
    "check:links": "CHECK_LINKS=true astro build"
  },
  "lint-staged": {
    "**/*.{astro,mjs,cjs,js,jsx,ts,tsx,yaml,yml}": [
      "pnpm format"
    ],
    "**/*.{mdx,md}": [
      "pnpm exec prettier . --write"
    ]
  },
  "dependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/starlight": "0.36.1",
    "@astrojs/starlight-tailwind": "4.0.1",
    "@tailwindcss/vite": "4.1.14",
    "astro": "5.14.6",
    "starlight-links-validator": "0.18.0",
    "starlight-scroll-to-top": "0.4.0",
    "tailwindcss": "4.1.14",
    "typescript": "5.9.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.37.0",
    "@types/jsdom": "27.0.0",
    "@types/node": "22.18.11",
    "@typescript-eslint/eslint-plugin": "8.46.1",
    "@typescript-eslint/parser": "8.46.1",
    "eslint": "9.37.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-astro": "1.3.1",
    "eslint-plugin-prettier": "5.5.4",
    "globals": "16.4.0",
    "husky": "9.1.7",
    "is-ci": "4.1.0",
    "jsdom": "27.0.0",
    "lint-staged": "16.2.4",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "0.14.1",
    "sharp": "0.34.4",
    "vitest": "3.2.4",
    "wrangler": "4.43.0"
  },
  "packageManager": "pnpm@10.18.3"
}
