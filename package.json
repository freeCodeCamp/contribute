{
  "name": "@freecodecamp/contribute",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prepare": "is-ci || husky",
    "develop": "astro dev",
    "build": "astro build",
    "preview": "pnpm build && wrangler pages dev",
    "format": "prettier . --write --cache && eslint . --cache --fix",
    "lint": "prettier . --check --cache && eslint . --cache",
    "test": "vitest run",
    "test:update": "vitest --update"
  },
  "lint-staged": {
    "**/*.{astro,mjs,cjs,js,jsx,ts,tsx,yaml,yml}": [
      "pnpm format"
    ],
    "**/*.{mdx,md}": [
      "pnpm exec prettier . --write"
    ]
  },
  "dependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/cloudflare": "^11.0.5",
    "@astrojs/starlight": "0.27.1",
    "@astrojs/starlight-tailwind": "2.0.3",
    "@astrojs/tailwind": "5.1.5",
    "astro": "4.16.18",
    "tailwindcss": "3.4.17",
    "typescript": "5.8.3"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/node": "22.16.1",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "dotenv": "16.6.1",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-astro": "0.34.0",
    "eslint-plugin-prettier": "5.5.1",
    "husky": "9.1.7",
    "is-ci": "4.1.0",
    "jsdom": "^26.1.0",
    "lint-staged": "16.1.2",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "0.14.1",
    "sharp": "0.34.2",
    "vitest": "3.2.4",
    "wrangler": "^4.0.0"
  },
  "packageManager": "pnpm@10.12.4"
}
